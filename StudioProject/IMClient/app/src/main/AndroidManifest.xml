<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ragentek.imclient.activity">

    <application
        android:name="com.ragentek.imclient.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Black.NoTitleBar">
        <activity
            android:name=".SplashActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />

        <service
            android:name="com.ragentek.imclient.Service.MessageService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".BuddylistActivity" />
        <activity android:name=".ChatListActivity"></activity>
    </application>

</manifest>